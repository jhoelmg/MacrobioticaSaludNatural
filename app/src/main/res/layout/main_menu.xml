<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fffffffb">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscarProducto"
        android:background="#ff4b93ff"
        android:textColor="#ffffffff"
        android:text="@string/buscar_producto"
        android:textSize="15dp"
        android:focusable="true"
        android:clickable="true"
        android:enabled="true"
        android:height="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:width="150dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="btnBuscarProductoOnClick"

        android:layout_above="@+id/ivHospital"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivDoctor"
        android:background="@drawable/doctor"
        android:layout_alignBottom="@+id/ivHospital"
        android:layout_alignStart="@id/btnBuscarProducto" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivHospital"
        android:background="@drawable/hospital"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@id/btnBuscarProducto"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnBuscarProducto"
        android:layout_alignEnd="@+id/btnBuscarProducto"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTitle"
        android:layout_marginTop="25dp"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:background="#ff4b93ff"
        android:textColor="#ffffffff"
        android:text="facebursh"
        android:textSize="15dp"
        android:focusable="true"
        android:clickable="true"
        android:enabled="true"
        android:height="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:width="150dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="btnLoginOnClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>