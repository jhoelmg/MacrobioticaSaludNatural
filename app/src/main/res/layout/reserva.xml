<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="25dp"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="30dp"
        android:text="Reservas"
        android:id="@+id/textView5"
        android:layout_gravity="left|center_horizontal"
        android:height="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:background="#c9932e"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <TableRow
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="ID"
            android:id="@+id/textView"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:background="#56b33d"
            android:gravity="center" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Producto"
            android:id="@+id/textView2"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:background="#ff4a9437"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="Cant."
            android:id="@+id/textView3"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#56b33d"
            android:layout_weight="0.30" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="Quitar"
            android:id="@+id/textView4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:background="#ff4a9437"
            android:autoText="true" />
    </TableRow>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tbProductosReservados"></TableLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Sucursal"
            android:id="@+id/textView6"
            android:background="#c9932e"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:gravity="center" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/spSucursalesReserva"
            android:layout_weight="1"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="104dp"
            android:layout_height="30dp"
            android:text="Atras"
            android:id="@+id/btnAtrasReservar"
            android:background="#ff4b93ff"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <Button
            android:layout_width="104dp"
            android:layout_height="30dp"
            android:text="Reservar"
            android:id="@+id/btnReservarProductos"
            android:layout_marginLeft="20dp"
            android:background="#ffff3a4c"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>