<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="25dp"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="Diagnóstico"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:background="#bf2ecc54"
        android:textSize="20dp"
        android:textStyle="bold"
        android:width="100dp"
        android:height="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Enfermedad"
            android:id="@+id/textView3"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:background="#c9932e"
            android:width="120dp"
            android:height="25dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:id="@+id/textView4"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:width="80dp"
            android:height="25dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:background="#8e000000" />
    </TableRow>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tbEnfermedades"></TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="Tratamiento"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:background="#bf2ecc54"
        android:textSize="20dp"
        android:textStyle="bold"
        android:width="100dp"
        android:height="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

    <TableRow
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:id="@+id/textView5"
            android:textSize="15dp"
            android:height="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#c9932e"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:id="@+id/textView6"
            android:textSize="15dp"
            android:height="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#8e000000"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_weight="0.66" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:id="@+id/textView7"
            android:textSize="15dp"
            android:height="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#c9932e"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_weight="0.20" />
    </TableRow>

    <ScrollView
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:id="@+id/scrollView2"
        android:layout_gravity="center">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tbTratamiento" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>
        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="104dp"
            android:layout_height="30dp"
            android:text="Atrás"
            android:id="@+id/btnAtrasEnfermedad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ff4b93ff"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15dp"
            android:textColor="#ffffffff"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</LinearLayout>